{
  "$schema": "./skill-rules.schema.json",
  "version": "2.0",
  "config": {
    "minConfidenceScore": 3,
    "showMatchReasons": true,
    "maxSkillsToShow": 5
  },
  "scoring": {
    "keyword": 2,
    "keywordPattern": 3,
    "pathPattern": 4,
    "directoryMatch": 5,
    "intentPattern": 4,
    "contentPattern": 3,
    "contextPattern": 2
  },
  "directoryMappings": {
    "src/components/core": "core-components",
    "src/components": "core-components",
    "src/screens": "navigation-architecture",
    "src/navigation": "navigation-architecture",
    "src/hooks": "react-ui-patterns",
    "src/graphql": "graphql-schema",
    "src/localization": "i18n-translations",
    "src/state": "state-management",
    "src/contexts": "state-management",
    ".maestro": "maestro-e2e",
    ".github/workflows": "github-actions",
    "src/utils/sentry": "analytics-tracking",
    "src/datadog": "analytics-tracking"
  },
  "skills": {
    "testing-patterns": {
      "description": "Jest testing patterns and TDD workflow",
      "priority": 9,
      "triggers": {
        "keywords": [
          "test",
          "jest",
          "spec",
          "tdd",
          "mock",
          "factory"
        ],
        "keywordPatterns": [
          "\\btest(?:s|ing)?\\b",
          "\\bspec\\b",
          "unit test"
        ],
        "pathPatterns": [
          "**/*.test.ts",
          "**/*.test.tsx",
          "**/*.spec.ts",
          "**/test-utils/**",
          "**/__mocks__/**"
        ],
        "intentPatterns": [
          "(?:write|add|create|fix).*(?:test|spec)",
          "(?:test|spec).*(?:for|of|the)",
          "(?:red.green.refactor|tdd)"
        ],
        "contentPatterns": [
          "describe\\(",
          "it\\(",
          "expect\\(",
          "jest\\.mock",
          "getMock"
        ]
      },
      "excludePatterns": [
        "e2e",
        "maestro",
        "end-to-end"
      ]
    },
    "formik-patterns": {
      "description": "Formik form handling with validation",
      "priority": 7,
      "triggers": {
        "keywords": [
          "form",
          "formik",
          "validation",
          "yup",
          "input field"
        ],
        "keywordPatterns": [
          "\\bform(?:s)?\\b",
          "Form\\b",
          "\\bvalidat(?:e|ion)\\b"
        ],
        "pathPatterns": [
          "**/*Form.tsx",
          "**/*Form/**",
          "**/forms/**"
        ],
        "intentPatterns": [
          "(?:create|build|add).*(?:form)",
          "(?:form).*(?:validation|submit|field)",
          "(?:validat(?:e|ion)).*(?:schema|rule)"
        ],
        "contentPatterns": [
          "useFormik",
          "Formik",
          "FormikProvider",
          "yup\\."
        ]
      },
      "excludePatterns": [
        "format",
        "transform",
        "platform"
      ]
    },
    "graphql-schema": {
      "description": "GraphQL queries, mutations, and code generation",
      "priority": 8,
      "triggers": {
        "keywords": [
          "graphql",
          "query",
          "mutation",
          "gql",
          "apollo",
          "fragment"
        ],
        "keywordPatterns": [
          "\\bgql\\b",
          "\\bquery\\b",
          "\\bmutation\\b",
          "graphql"
        ],
        "pathPatterns": [
          "**/*.gql",
          "**/graphql/**",
          "**/*.generated.ts"
        ],
        "intentPatterns": [
          "(?:create|add|write).*(?:query|mutation|fragment)",
          "(?:fetch|get|load).*(?:data|from api)",
          "(?:graphql).*(?:hook|type)"
        ],
        "contentPatterns": [
          "gql`",
          "useQuery",
          "useMutation",
          "useLazyQuery"
        ]
      },
      "relatedSkills": [
        "react-ui-patterns"
      ]
    },
    "core-components": {
      "description": "Core component library and design system",
      "priority": 7,
      "triggers": {
        "keywords": [
          "component",
          "ui",
          "button",
          "text",
          "box",
          "hstack",
          "vstack",
          "token"
        ],
        "keywordPatterns": [
          "\\bcomponent\\b",
          "\\$[a-z]+\\d*"
        ],
        "pathPatterns": [
          "**/components/core/**",
          "**/components/**/*.tsx"
        ],
        "intentPatterns": [
          "(?:create|build|add).*(?:component)",
          "(?:style|design).*(?:component|ui)"
        ],
        "contentPatterns": [
          "from 'components/core",
          "Box",
          "HStack",
          "VStack",
          "Text"
        ]
      },
      "excludePatterns": [
        "storybook",
        "test"
      ]
    },
    "systematic-debugging": {
      "description": "Four-phase debugging with root cause analysis",
      "priority": 9,
      "triggers": {
        "keywords": [
          "bug",
          "debug",
          "fix",
          "error",
          "issue",
          "broken",
          "crash",
          "failing"
        ],
        "keywordPatterns": [
          "\\bbug\\b",
          "\\bfix\\b",
          "\\berror\\b",
          "\\bissue\\b",
          "doesn't work",
          "not working"
        ],
        "intentPatterns": [
          "(?:fix|debug|resolve|investigate).*(?:bug|error|issue|problem)",
          "(?:why).*(?:not working|broken|failing|crash)",
          "(?:something).*(?:wrong|broken)"
        ]
      },
      "excludePatterns": [
        "fix typo",
        "fix formatting",
        "fix lint"
      ]
    },
    "react-ui-patterns": {
      "description": "React patterns, hooks, loading states, error handling",
      "priority": 6,
      "triggers": {
        "keywords": [
          "react",
          "hook",
          "useeffect",
          "usestate",
          "usememo",
          "useref",
          "loading",
          "suspense"
        ],
        "keywordPatterns": [
          "\\buse[A-Z]\\w+\\b",
          "\\bhook\\b"
        ],
        "pathPatterns": [
          "**/hooks/**",
          "**/use*.ts",
          "**/use*.tsx"
        ],
        "intentPatterns": [
          "(?:create|write).*(?:hook|custom hook)",
          "(?:handle).*(?:loading|error|async)"
        ],
        "contentPatterns": [
          "useState",
          "useEffect",
          "useCallback",
          "useMemo"
        ]
      },
      "excludePatterns": [
        "test",
        "jest"
      ]
    }
  }
}